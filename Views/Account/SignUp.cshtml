@model YourProjectName.Controllers.SignUpViewModel

@{
    ViewData["Title"] = "Sign Up";
}

<style>
    .form-container {
        max-width: 400px;
        margin: 50px auto;
        padding: 30px;
        border: 1px solid #ccc;
        border-radius: 10px;
        background: #fff; /* Light background */
        color: #000; /* Black text */
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }

        .form-container input.form-control-sm {
            border: 1px solid #ccc !important;
            background-color: #fff !important;
            color: #000 !important;
        }

    .form-label {
        font-weight: 700;
        margin-bottom: 5px;
        display: block;
        color: #000;
    }

    .text-danger {
        font-size: 0.9rem;
    }
</style>

<div class="form-container">
    <h3 class="text-center mb-4">Sign Up</h3>

    <form asp-action="SignUp" method="post" novalidate>
        @Html.AntiForgeryToken()

        <div class="form-group mb-3">
            <label class="form-label" for="Email">Email</label>
            <input asp-for="Email" id="Email" class="form-control form-control-sm" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label class="form-label" for="Password">Password</label>
            <input asp-for="Password" id="Password" type="password" class="form-control form-control-sm" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label class="form-label" for="ConfirmPassword">Confirm Password</label>
            <input asp-for="ConfirmPassword" id="ConfirmPassword" type="password" class="form-control form-control-sm" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary w-100">Sign Up</button>

        <p class="mt-3 text-center" style="color:#000;">
            Already have an account? <a href="/Account/SignIn">Sign in</a>
        </p>

        <div class="text-danger mt-3">
            @foreach (var error in ViewData.ModelState[string.Empty]?.Errors ?? new Microsoft.AspNetCore.Mvc.ModelBinding.ModelErrorCollection())
            {
                <div>@error.ErrorMessage</div>
            }
        </div>

        @if (ViewBag.Message != null)
        {
            <div class="text-success mt-3">@ViewBag.Message</div>
        }
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
